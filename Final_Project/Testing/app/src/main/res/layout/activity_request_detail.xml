<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailUrgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRITICAL"
                    android:textColor="@color/urgent_red"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We need food and water..."
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested Items:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDetailPackages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="[Food Pack, Warmth Pack]"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address / Coordinates:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hayrullah Mah. 123. Sk..."
                    android:layout_marginBottom="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Show on Maps"
                    app:icon="@drawable/ic_location_on"
                    android:backgroundTint="@color/primary_green"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>